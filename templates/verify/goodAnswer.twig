<section class="admin">
    <div class="container">
        <div class="div_content">
            <h2>Правильно!</h2>
            <div class="video_div">
                <video src="/app/pirate/media/goodAnswer{{ questionNumber }}.mp4" controls class="video_player"></video>
            </div>

            <div class="question">
                <p>{{ clue }}</p>
            </div>
            {% if questionNumber < 5 %}
                <a href="/verify/nextQuestion/{{ questionNumber+1 }}" class="btn btn_send">Дальше</a>
            {% else %}
                <a href="/" class="btn btn_send">В начало</a>
            {% endif %}
        </div>
    </div>
</section>